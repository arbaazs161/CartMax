<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_start"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/name"
        android:padding="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        >
    </ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:src="@drawable/illustration_home"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Order from the best"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhattext"
        android:letterSpacing="0.1"
        android:lineHeight="40dp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="stores in your"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhattext"
        android:letterSpacing="0.1"
        android:lineHeight="40dp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="location"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhattext"
        android:letterSpacing="0.1"
        android:lineHeight="40dp"
        >

    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Set up Location"
        android:backgroundTint="@color/sky_btn"
        android:textColor="@color/background"
        android:textSize="20dp"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/redhattextbold"
        ></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account? "
            android:textSize="15dp"
            android:letterSpacing="0.2"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/btnTextLogin"
            android:textColor="@color/sky_btn"
            android:textStyle="bold"
            android:fontFamily="@font/redhattextbold"
            android:textSize="15dp"
            android:letterSpacing="0.2"
            ></TextView>

    </LinearLayout>

</LinearLayout>